<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Background Color --> 
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#FF2A313E"/>
    <SolidColorBrush x:Key="SecundaryBackgroundColor" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="SurfaceBackgroundBrush" Color="#8C1A10"/>
    <!-- Text Color -->

    <SolidColorBrush x:Key="PrimaryTextColor" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="SecundaryTextColor" Color="#999999"/>

    <SolidColorBrush x:Key="PrimaryIconColor" Color="#EFEFEF"/>
    <SolidColorBrush x:Key="SecundaryIconColor" Color="#666666"/>
    
    <SolidColorBrush x:Key="PrimaryHoverColor" Color="#3F455A"/>

    <SolidColorBrush x:Key="PrimaryButtonColor" Color="#006eff"/>

    <SolidColorBrush x:Key="PrimaryRedColor" Color="#E81123"/>
</ResourceDictionary>