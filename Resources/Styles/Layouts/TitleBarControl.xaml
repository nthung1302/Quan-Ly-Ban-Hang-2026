<UserControl x:Class="Files.Resources.Styles.Layouts.TitleBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Files.Resources.Styles.Layouts"
             mc:Ignorable="d">
    
    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Path Data="{DynamicResource AppIcon}" Grid.Column="0" Height="20" VerticalAlignment="Center" Width="20" Margin="6" Stretch="Uniform" Fill="{DynamicResource PrimaryIconColor}"/>

        <TextBlock Grid.Column="1" Text="GoldBox Sale Client version 1.0.0" VerticalAlignment="Center" FontSize="13" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextColor}"/>

        <StackPanel Grid.Column="2" Orientation="Horizontal">
            <Button x:Name="Minisize" ToolTip="Minisize" Style="{DynamicResource ButtonTitleBarStyle}" Click="Minisize_Click">
                <Path Data="{DynamicResource MinisizeIcon}" 
                      Fill="{DynamicResource PrimaryIconColor}" Stretch="Uniform" Width="12"/>
            </Button>
            <Button x:Name="Restoresize" ToolTip="Restore size" Style="{DynamicResource ButtonTitleBarStyle}" Click="Restoresize_Click">
                <Path Data="{DynamicResource RestoreIcon}" 
                      Fill="{DynamicResource SecundaryIconColor}" Stretch="Uniform" Width="11"/>
            </Button>
            <Button x:Name="CloseWindow" ToolTip="Maxsize" Style="{DynamicResource ButtonTitleBarCloseStyle}" Click="CloseWindow_Click">
                <Path Data="{DynamicResource CloseWindowIcon}" 
                      Fill="{DynamicResource PrimaryIconColor}" Stretch="Uniform" Width="11"/>
            </Button>
        </StackPanel>
    </Grid>
    <UserControl.Resources>
        <Style x:Key="MenuItemTitleBarStyle" TargetType="{x:Type MenuItem}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="9 4 9 4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type MenuItem}">
                        <Border Name="container" Background="{TemplateBinding Background}" Margin="3" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <Grid>
                                <ContentPresenter ContentSource="Header" VerticalAlignment="Center"/>
                                <Popup Name="PATH_Popup" Placement="Right" IsOpen="{TemplateBinding IsSubmenuOpen}" AllowsTransparency="True" Focusable="False" MinWidth="250">
                                    <Border Background="#2c2d30" BorderBrush="Black" BorderThickness="1" Margin="30 20 5 0" Padding="5" CornerRadius="3">
                                        <StackPanel IsItemsHost="True"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="container" Property="Background" Value="#3F455A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonTitleBarStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="40"/>
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="container" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="container" Property="Background" Value="{DynamicResource PrimaryHoverColor}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonTitleBarCloseStyle"
       TargetType="Button"
       BasedOn="{StaticResource ButtonTitleBarStyle}">

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="container" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="container" Property="Background"
                                Value="{DynamicResource PrimaryRedColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

    </UserControl.Resources>
</UserControl>
