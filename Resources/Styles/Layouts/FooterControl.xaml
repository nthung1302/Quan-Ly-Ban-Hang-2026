<UserControl x:Class="Files.Resources.Styles.Layouts.FooterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Files.Resources.Styles.Layouts"
             mc:Ignorable="d" 
             Padding="5" Background="{DynamicResource SurfaceBackgroundBrush}">
    <Grid Margin="5 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal" Margin="0 0 10 0">
                <Path Data="{DynamicResource InternetIcon}"
                    Stretch="Uniform" Fill="{DynamicResource PrimaryIconColor}" Height="16" Width="16" Margin="5 0"/>
                <TextBlock x:Name="TbPing" Foreground="{DynamicResource PrimaryTextColor}" FontSize="12"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0 0 10 0">
                <Path Data="{DynamicResource ChatIcon}"
                    Stretch="Uniform" Fill="{DynamicResource PrimaryIconColor}" Height="16" Width="16" Margin="5 0"/>
                <TextBlock Text="Chat Support" Foreground="{DynamicResource PrimaryTextColor}" FontSize="12"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <Path Data="{DynamicResource TeminalIcon}"
                    Stretch="Uniform" Fill="{DynamicResource PrimaryIconColor}" Height="16" Width="16" Margin="5 0"/>
                <TextBlock Text="Console" Foreground="{DynamicResource PrimaryTextColor}" FontSize="12"/>
            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal">

            <StackPanel Orientation="Horizontal" Margin="0 0 10 0">
                <Path Data="{DynamicResource ActiveIcon}"
                    Stretch="Uniform" Fill="{DynamicResource PrimaryIconColor}" Height="16" Width="16" Margin="5 0"/>
                <TextBlock x:Name="TbKey" Foreground="{DynamicResource PrimaryTextColor}" FontSize="12"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 10 0">
                <Path Data="{DynamicResource PublicIcon}"
                    Stretch="Uniform" Fill="{DynamicResource PrimaryIconColor}" Height="16" Width="16" Margin="5 0"/>
                <TextBlock x:Name="TbIpPublic" Foreground="{DynamicResource PrimaryTextColor}" FontSize="12"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Path Data="{DynamicResource TimerIcon}"
                    Stretch="Uniform" Fill="{DynamicResource PrimaryIconColor}" Height="16" Width="16" Margin="5 0"/>
                <TextBlock x:Name="TbTimer" Foreground="{DynamicResource PrimaryTextColor}" FontSize="12"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</UserControl>
