<UserControl x:Class="Files.Resources.Styles.Layouts.FooterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Files.Resources.Styles.Layouts"
             mc:Ignorable="d" 
             Padding="5" Background="{DynamicResource SurfaceBackgroundBrush}" Loaded="UserControl_Loaded">
    
    <Grid Margin="5 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal" Margin="0 0 10 0">
                <Path Data="{DynamicResource _ping_icon}"
                    Stretch="Uniform" Fill="{DynamicResource PrimaryIconColor}" Height="16" Width="16" Margin="5 0"/>
                <TextBlock x:Name="tb_ping" Foreground="{DynamicResource PrimaryTextColor}" FontSize="12"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0 0 10 0">
                <Path Data="{DynamicResource _chat_icon}"
                    Stretch="Uniform" Fill="{DynamicResource PrimaryIconColor}" Height="16" Width="16" Margin="5 0"/>
                <TextBlock Text="{DynamicResource _chat_support}" Foreground="{DynamicResource PrimaryTextColor}" FontSize="12"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 10 0">
                <Path Data="{DynamicResource _terminal_icon}"
                    Stretch="Uniform" Fill="{DynamicResource PrimaryIconColor}" Height="16" Width="16" Margin="5 0"/>
                <TextBlock Text="{DynamicResource _console}" Foreground="{DynamicResource PrimaryTextColor}" FontSize="12"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Path Data="{DynamicResource _data_icon}"
                    Stretch="Uniform" Fill="{DynamicResource PrimaryIconColor}" Height="16" Width="16" Margin="5 0"/>
                <TextBlock x:Name="tb_data" Text="{DynamicResource _data_base}" Foreground="{DynamicResource PrimaryTextColor}" FontSize="12"/>
            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal">

            <StackPanel Orientation="Horizontal" Margin="0 0 10 0">
                <Path Data="{DynamicResource _active_icon}"
                    Stretch="Uniform" Fill="{DynamicResource PrimaryIconColor}" Height="16" Width="16" Margin="5 0"/>
                <TextBlock x:Name="tb_key" Foreground="{DynamicResource PrimaryTextColor}" FontSize="12"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 10 0">
                <Path Data="{DynamicResource _public_wifi_icon}"
                    Stretch="Uniform" Fill="{DynamicResource PrimaryIconColor}" Height="16" Width="16" Margin="5 0"/>
                <TextBlock x:Name="tb_public_ip" Foreground="{DynamicResource PrimaryTextColor}" FontSize="12"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Path Data="{DynamicResource _timer_icon}"
                    Stretch="Uniform" Fill="{DynamicResource PrimaryIconColor}" Height="16" Width="16" Margin="5 0"/>
                <TextBlock x:Name="tb_timer" Foreground="{DynamicResource PrimaryTextColor}" FontSize="12"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
    
</UserControl>
